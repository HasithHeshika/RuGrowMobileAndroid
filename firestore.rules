
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any user (authenticated or not) to read plant data.
    match /plants/{plantId} {
      allow read, write: if true;

      // Allow any user to read/write to subcollections.
      match /{allPaths=**} {
        allow read, write: if true;
      }
    }
  }
}

// Realtime Database Rules
// These rules grant public read and write access to your entire database.
// This is suitable for this demo app but should be secured for production.
{
  "rules": {
    ".read": true,
    ".write": true
  }
}
